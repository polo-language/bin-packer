{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES2019"],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "spec/*",
  ]
}
