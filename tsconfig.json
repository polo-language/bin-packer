{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2019"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "spec/*",
  ]
}
